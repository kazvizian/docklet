{
  "name": "docklet",
  "version": "0.1.0",
  "description": "Cross-runtime Base URL utility: resolve and build base URLs for Browser/Node/Bun/Deno.",
  "license": "MIT",
  "homepage": "https://github.com/kazvizian/docklet",
  "author": {
    "name": "KazViz",
    "email": "kaz@kazviz.com",
    "url": "https://kazviz.com"
  },
  "bugs": {
    "url": "https://github.com/kazvizian/docklet/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kazvizian/docklet.git"
  },
  "scripts": {
    "build": "tsdown",
    "clean": "rm -rf dist",
    "lint": "echo 'no lint configured'",
    "postinstall": "lefthook install || true",
    "prepublishOnly": "bun run build",
    "test": "bun test",
    "release": "semantic-release"
  },
  "dependencies": {},
  "packageManager": "bun@1.0.0",
  "engines": {
    "node": ">=18",
    "bun": ">=1.0.0",
    "deno": ">=1.36.0"
  },
  "keywords": [
    "kazvizian",
    "kazviz",
    "docklet",
    "url",
    "base-url",
    "utils",
    "import.meta.env",
    "bun",
    "deno"
  ],
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "default": "./dist/index.mjs"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "bun-types": "^1.1.38",
    "lefthook": "^1.13.6",
    "semantic-release": "^24.2.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "tsdown": "^0.15.12",
    "typescript": "^5.9.3"
  },
  "tsdown": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "esm",
      "cjs"
    ],
    "dts": true,
    "sourcemap": true,
    "clean": true,
    "treeshake": true,
    "target": "es2019",
    "minify": false
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
